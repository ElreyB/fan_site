<h1>Genres</h1>

<% if @genres.any? %>
  <% @genres.each do |genre| %>
  <ul>
    <li><%= link_to genre.name, genre_path(genre) %></li>
  </ul>
  <% end %>
<% else %>
  <p>There are no Genres!!!!</p>
<% end %>

<h2>Books</h2>

<% if @popular_books.any? %>
  <% @popular_books.each do |book| %>
  <ul>
    <li><%= link_to book.name, book_path(book) %></li>
  </ul>
  <% end %>
<% else %>
  <p>There are no reviews!!!!</p>
<% end %>
