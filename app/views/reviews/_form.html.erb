<%= render 'layouts/errors', :object => @review %>

<%= form_for [@book, @review] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.number_field :rating, class: "form-control", max: 5, min: 1, steps: 1%>
  </div>
  <div class="form-group">
    <%= f.label :review %>
    <%= f.text_area :review, class: "form-control", rows: 4, cols: 50%>
  </div>
  <%= f.submit class: "btn-primary" %>
<% end %>
