<%= render 'layouts/errors', :object => @review %>

<%= form_for [@book, @review] do |f| %>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.number_field :rating, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :review %>
    <%= f.text_field :review, class: "form-control"%>
  </div>
  <%= f.submit class: "btn-primary" %>
<% end %>
