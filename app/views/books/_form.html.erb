<%= render 'layouts/errors', :object => @book %>

<%= form_for [@genre, @book] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_area :bio, class: "form-control", rows: 4, cols: 50%>
  </div>
  <%= f.submit class: "btn-primary" %>
<% end %>
